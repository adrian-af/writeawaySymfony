{# hello.html.twig #}
{% block body %}
    {% if user %}
        hello {{ user.username }}!
    {% endif %}
    {% if error is defined%}
        <div id='error'>{{ error }}</div>
    {% endif %}
    {% if stories is defined%}
        {% if stories|length > 0 %}
            {% for story in stories %}
                <div id='{{ story.storyID }}' class='container'>
                   <div class='title'><a href="{{ path('seeStory', {'id': story.storyID}) }}"> {{ story.storyTitle }} </a> by <a href="{{ path('otherProfile', {'userId': story.user.userId})}}"> {{ story.user.username }}</a></div>
                    <div class='content'>{{ story.storyText|slice(0, 50)|raw }}...</div>
                    {# <div class='dateTime'> {{ story.datetime }} </div> #}
                </div>
            {% endfor %}
        {% endif %}
    {# <div id=$id clas='container'>
        <div class='title'><a href='./seeStory.php?id=$id'>$title </a> by <a href='./otherProfile.php?id=$userId'>$username</a></div>
        <div class='content'>$content...</div>
        <div class='dateTime'>$formattedDateTime</div>
    </div> #}
        
    {% endif %}
    
{% endblock %}