{# seeStory.html.twig #}
{% include 'header.html.twig' with {'genres':genres, 'userPfp': userPfp} %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ComonStyles.css') }}">
{% endblock %}
{% block styles %}
    <style>
        p{
            overflow-wrap: break-word;
        }
        p pre{
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        pre{
            padding: 5%;
            text-align: justify;
            white-space: pre-line;
            background: lightgray;
            border:1px solid black;
        }
        /*Coments*/
        .commentsWall{
            background: #a39b74;
            border: 10px inset #ede4bd;
            padding: 2%;
        }
        #commentForm{
            margin: 10px 0 10px 0;
        }
        .comment{
            border-bottom: 3px dashed #66424c;
            padding-top: 2%;
            margin-bottom: 5px;
        }
        .comment > * > pre{
            background: none;
            border:none;
        }
        .commentInfo{
            text-align: left;
            padding-left: 10px;
        }
    </style>
{% endblock %}
{% block body %}
<body>
    <div class="primero">
        {% if story %}
        <div id='{{ story.storyID }}' class='container'>
            <h2>{{ story.storyTitle }} </h2>
            <div class='dateTime'> {{ story.datetime|date('Y-m-d H:i:s') }} </div>
            <p><pre>{{ story.storyText|raw }}</pre></p>
        </div>
        {% endif %}
        <div class='commentsWall'>
            <div id='commentForm'>
                <form action="commentCode.php" method='GET'>
                    <input name='storyId' value='<?php echo $storyId ?>' type='hidden'>
                    <input type="text" name='text' placeholder='Write a comment...'>
                    <button type='submit'>Comment</button>
                </form>
            </div>
            {# {% if comment %} #}
            <div id='comments'>
                <div class='comment'>
                <div class='commentInfo'>$commentUsername commented on $commentDatetime</div>
                <div><pre>$commentContent</pre></div>
                </div>
            </div>
            {# {% endif %} #}
        </div>
    </div>
</body>
{% endblock %}