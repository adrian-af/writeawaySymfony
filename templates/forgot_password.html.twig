{# templates/forgot_password.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <body>
    <div class="container d-flex align-items-center justify-content-center">
        <div class="container-fluid m-2">
            <div class="text-center"><h1>Forgot Password</h1></div>

            <form action="{{ path('forgot_password') }}" method="post">
                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" id="email" class="form-control" name="email" required />
                </div>

                <!-- Error message -->
                <div class="row mb-4">
                    <div class="col d-flex justify-content-center">
                        {% if error %}
                            <div style="color: red" id="wrong">{{ error }}</div>
                        {% endif %}
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4">Send Code</button>
            </form>
        </div>
    </div>
    </body>
{% endblock %}