{# templates/stories.html.twig #}
{% extends 'header.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ComonStyles.css') }}">
{% endblock %}
{% block body %}
            {% if stories|length > 0 %}
                {% for story in stories %}
                    <div id='{{ story.storyID }}' class='container'>
                        <div class='title'><a href="{{ path('seeStory', {'id': story.storyID}) }}"> {{ story.storyTitle }} </a> 
                            by <a href="{{ path('otherProfile', {'userId': story.user.userId})}}"> {{ story.user.username }}</a>
                        </div>
                        <div class='content'>{{ story.storyText|slice(0, 50)|raw }}...</div>
                        <div class='dateTime'> {{ story.datetime|date('Y-m-d H:i:s') }} </div>
                    </div>
                {% endfor %}
            {% endif %}
{% endblock %}