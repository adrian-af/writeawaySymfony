{# templates/about.html.twig #}
{% include 'header.html.twig' with {'genres':genres, 'userPfp': userPfp} %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Stories.css') }}">
{% endblock %}
<style>
    #booksdiv
    {
        width: 100%;
        background-image: url("{{ asset('Images/libros.png') }}");
        background-repeat: repeat-x;
        height: 80px;
        background-size: auto 100%;
    }
    h1
    {
        color: #669999;
        font-weight: bold;
    }

    #image-container
    {
        width: 300px;
        height: 500px;
        vertical-align: middle;
    }
    #logo-img
    {
        width: 300px;
        height: auto;
    }
</style>
{% block body %}
<div class="primero card container">
    <div class="row">
        <div class="col-md-3">
            <h1>Welcome!
            </h1>
            <table>
                <tr>
                    <td id="image-container">
                        <img src="{{ asset('Images/logo3.png') }}" id="logo-img" alt="Writeaway logo" class="img-fluid"/>
                    </td>
                </tr>
            </table>
           
        </div>
        <div class="col-md-9 d-flex align-items-center">
            <div class="p-4">
                <h3 class="subtitle">What is this web?</h3>
                <p>
                    Welcome to Write Away, a creative space for young writers!
                    This user-friendly website is designed for anyone who wants to
                    to unleash their imagination, share stories, and explore the
                    diverse world of storytelling.</p>
                <h3 class="subtitle">Who are we?</h3>
                <p>
                    We are Tomás, Adrián, and Cielo, hardworking students of Web Apllication Development
                    in I.E.S CLara del Rey in Spain that have combined our habilities learned to create
                    this web project.
                </p>
                <h3 class="subtitle">Want to contact us?</h3>
                <p>Contact email info@writeaway.org</p>
            </div>
        </div>
    </div>
     <div id="booksdiv" ></div>
</div>  
{% endblock %}